doctype html
html(lang='en')
    head
        title COSC203: Birds of Aotearoa
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/styles/layout.css')
        link(rel='stylesheet', href='/styles/theme.css')
        link(rel='stylesheet', href='/styles/conservation-status.css')
        link(rel='stylesheet', href='/styles/cards.css')
        link(rel='stylesheet', href='/styles/create.css')
        script(defer, src='/scripts/populate_form.js')
    body
        include templates/header.pug
        aside
            include templates/filter_form.pug
            include templates/status_legend.pug
        main
            each bird in birds
                include templates/bird_card.pug
            div(class='options') 
                a(href=`http://localhost:440/birds/create`)
                    div(class='dropdown')
                        img(src=`/images/create_icon.png`, class="CRUD_img", id="create")
        include templates/footer.pug