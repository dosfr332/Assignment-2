html(lang='en')
    head
        title COSC203: Birds of Aotearoa
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/styles/layout.css')
        link(rel='stylesheet', href='/styles/theme.css')
        link(rel='stylesheet', href='/styles/conservation-status.css')
        link(rel='stylesheet', href='/styles/404_stuff.css')
        link(rel='stylesheet', href='/styles/cards.css')
        link(rel='stylesheet', href='/styles/create.css')
        script(href='/scripts/script.js')
        script(src='/scripts/CRUD_stufff.js')
    body(class='bod4')
        include templates/header.pug
        
        h1 Welcome to build a bird!
        div(class='content')    
            form(ref='create_bird', id='create_bird', action='http://localhost:440/birds/api/upload', method='POST', encType="multipart/form-data")
                h4 * required feilds
                h3 Names:
                h5 Primary name *
                input(type='text' name='pname' placeholder="name...", class="text_input", class="required", id="prm", required)
                h5 English name *
                input(type='text' name='ename' placeholder="name...", class="text_input", class="required", id="eng", required)
                h5 Scientific name * 
                input(type='text' name='sname' placeholder="name...", class="text_input", class="required", id="sci", required)
                h5 Family name *
                input(type='text' name='fname' placeholder="name...", class="text_input", class="required", id="fam", required)
                h5 Order name
                input(type='text' name='ordname' placeholder="name...", class="text_input", id="ord")
                h5 Other names (comma separated)
                input(type='text' name='othname' placeholder="name...", class="text_input", id="other")
                h3 Status: * 
                select(name='status' id='status', required)
                    option(selected)
                    option(class="Not-Threatened") Not Threatened
                    option(class="Naturally-Uncommon") Naturally Uncommon
                    option(class="Relict") Relict
                    option(class="Recovering") Recovering
                    option(class="Declining") Declining
                    option(class="Nationally-Increasing") Nationally Increasing
                    option(class="Nationally-Vulnerable") Nationally Vulnerable
                    option(class="Nationally-Endangered") Nationally Endangered
                    option(class="Nationally-Critical") Nationally Critical
                    option(class="Data-Deficient") Data Deficient
                h3 Photo:
                h5 Credit *
                input(type='text' name='credit' placeholder="Credit...", class="text_input" , class="required", id="cred", required) 
                h5 Photo upload
                input(type='file' name="myFile", id="upload")
                h3(class="size_h") Size: 
                h5 weight (g) *
                input(type='number' name='weight' placeholder="Credit...", class="num_input" , class="required", id="wei",, required)
                h5 Length (cm) *
                input(type='number' name='length' placeholder="Credit...", class="num_input", class="required", id="len", required)
                button(onclick='createBird',type='submit') Create
                

            